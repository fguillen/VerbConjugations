%ul#tenses{:title => @verb[:name], :selected => 'true'}
  - @verb[:tenses].map { |e| e[:name] }.each do |tense|
    %li
      %a{:href => "##{tense.downcase.gsub(/[^a-z]/,'')}"}= tense
  
- @verb[:tenses].each do |tense|
  %ul{:id => tense[:name].downcase.gsub(/[^a-z]/,''), :title => tense[:name]}
    - tense[:conjugations].each do |conjugation|
      %li= conjugation
  
= haml(:search_form, :layout => false)
